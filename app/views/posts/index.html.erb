<div class="container mt-4">
	<div class="row main">
		<div class="left col-md-6 d-none d-md-block">
			<% if user_signed_in? %>
				<%= render "profile" %>
			<% else %>
			<%= image_tag ("raggae.jpeg"), class:
			"img-responsive"%>
			<% end %>
		</div>
		<div class="right col-md-6">
			<p id="notice"><%= notice %></p>
			<div class="new-post">
				<%= link_to 'New Post', new_post_path %>
			</div>
			<%= render "post" %>
		</div>
	</div>
</div>
