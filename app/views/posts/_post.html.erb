<div class="posts">
  <% @posts.each do |post| %>
  <div class="card">
    <div class="card-title"><%= post.title %></div>
    <div class="card-text"><%= post.content %></div>
    <% if user_signed_in? %>
      <div class="card-subtitle text-muted"><%= post.user.username %></div>
    <% end %>
  </div>
  <% end %>
</div>